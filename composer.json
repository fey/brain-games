{
    "name": "hexlet/code",
    "type": "project",
    "bin": [
        "bin/brain-games",
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime",
        "bin/brain-power"
    ],
    "description": "Brain Games is bundle of mini-games with command-line interface",
    "keywords": [
        "hexlet",
        "brain-games",
        "awesome",
        "cli",
        "project"
    ],
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Games/IsEven.php",
            "src/Games/Calc.php",
            "src/Games/Gcd.php",
            "src/Games/Progression.php",
            "src/Games/IsPrime.php",
            "src/Games/TwoInPower.php",
            "src/Games/Balance.php"
        ]
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 src bin",
        "phpcbf": "phpcbf --standard=PSR12 src bin",
        "phpstan": "phpstan analyze -l max src bin"
    },
    "require": {
        "php" : "^8.3",
        "wp-cli/php-cli-tools": "^0.11.10"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "*"
    }
}
